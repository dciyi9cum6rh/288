                <button id="ref_confirm_button" type="button" class="btn btn-primary ml-auto p-2">同意</button>
            </div>
        </div>
    </div>
</div>

<script>

    //20181212 ---使用者升級批發會員上傳資料
    $("#imgExample").mouseenter(function () {
        $('#Example').modal({ backdrop: "static" });
    });
</script>
